extend ../views/template.pug

block content
    .container
     .jumbotron.text-center
        .container
        h1.display-4 Hello, world!
        .container
        p.lead This is a simple chat application using Bootstrap, Pug, Express.js, Socket.io, and MongoDB.
        hr.my-4
        p Click the button below to get started!
        .container
            button.btn.btn-success.btn-lg.btn-block.shadow-lg(type='button' data-toggle='modal' data-target='#modalHome') Enter Chat
    #modalHome.modal.fade(tabindex='-1' role='dialog' aria-labelledby='modalHome' aria-hidden='true')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    h1#modalHome.text-center.modal-title.text-danger DISCLAIMER
                    button.close(type='button' data-dismiss='modal' aria-label='Close')
                    span(aria-hidden='true') &times;
                .modal-body
                    p This is one of my first projects, so there could be a few bugs (or a feature, depending how you see it). Proceed at your own risk!
                .modal-footer
                    button.btn.btn-secondary(type='button' data-dismiss="modal") Nevermind
                    a.btn.btn-primary(href="/node") Continue